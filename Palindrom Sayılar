public class Main{

    static  boolean isPolindrom(int number){
        int temp=number,reverseNumber=0,leftN = 0;
        while(temp!=0){
           leftN=temp%10;
           reverseNumber=(reverseNumber*10)+leftN;
           temp /=10;

        } System.out.println(reverseNumber);
                if(reverseNumber==number)
                    return true;
                else
                    return false;
    }

        public static void main(String[] args) {
            System.out.println(isPolindrom(4004));


        }
        }
